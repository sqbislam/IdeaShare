<!DOCTYPE html>

<div class="row">
	<div class="col s12 m9">
		<h3>{{ideas.title}}</h3>
		<div class="card idea">
			<div class="card-content">
				<span class="card-title">{{formatDate ideas.date 'MMMM Do YYYY'}}</span>
				{{{ideas.body}}}
			</div>
		</div>
	</div>

	<div class="col s12 m3">
		<div class="card">
	      <div class="card-image">
	        <img src="{{ideas.user.image}}" class="circle responsive-img">
	        <span class="card-title center">{{ideas.user.firstName}} {{ideas.user.lastName}}</span>
	      </div>
	        <div class="card-action">
	        	<a href="/ideas/user/{{ideas.user.id}}"> More From {{ideas.user.firstName}}</a> 
	        </div>
	    </div>
	</div>
</div>
