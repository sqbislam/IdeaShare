<!DOCTYPE html>

<div class="row">
	<div class="col s12 m8">
		<h3>{{ideas.title}}</h3>
		<div class="card idea">
			<div class="card-content">
				<span class="card-title">{{formatDate ideas.date 'MMMM Do YYYY'}}</span>
				{{{ideas.body}}}
			</div>
		</div>
	</div>

	<div class="col s12 m4">
		<div class="card horizontal">
      <div class="card-image">
        <img src="{{ideas.user.image}}" class="circle">
      </div>
      <div class="card-stacked">
        <div class="card-content">
          <p class="idea-author">{{ideas.user.firstName}} {{ideas.user.lastName}}</p>
        </div>
        <div class="card-action">
        	<a href="/ideas/user/{{ideas.user.id}}"> More From {{ideas.user.firstName}}</a> 
        </div>
      </div>
    </div>
	</div>
</div>
