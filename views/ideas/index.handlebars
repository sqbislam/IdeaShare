<!DOCTYPE html>
<h2>Ideas</h2>

<div class="row">
	
	{{#each ideas}}
		<div class = "col s12 m4">
			<div class = "card">
				<div class = "card-image">
					<a href="/stories/edit/{{id}}" class = "btn-floating halfway-fab red">
						<i class = "fa fa-pencil"></i>
					</a>
				</div>
				<div class = "card-content center-align">
					<h5>{{title}}</h5>
					<p class = "idea-text"> {{stripTags (truncate body 150)}} </p>
					<br>
					<div class="chip">
				    	<img src="{{user.image}}" alt="Contact Person">
				    	{{user.firstName}} {{user.lastName}}
				  	</div>
				</div>
				<div class="card-action center-align">
					<a href="/ideas/show/{{id}}" class="btn grey">
						Read More
					</a>
				</div>
			</div>

		</div>

	{{else}}

		<p>No Stories Found</p>
	

	{{/each}}
</div>